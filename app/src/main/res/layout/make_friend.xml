<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeFriend"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#3d424d">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="#3d424d"
        android:orientation="vertical"
        android:weightSum="20">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#FF191C23"
            android:textColor="#fff"
            android:text="친구 요청"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="#3d424d"></LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#3d424d"
            android:textColor="#fff"
            android:text="사용자 프로필"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/make_friend_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#3d424d"
            android:textColor="#fff"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/make_friend_age"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#3d424d"
            android:textColor="#fff"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/make_friend_gender"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#3d424d"
            android:textColor="#fff"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/make_friend_location"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#3d424d"
            android:textColor="#fff"
            android:textSize="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"></LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#3d424d"
            android:textColor="#fff"
            android:text="친구 요청을 수락하시겠습니까?"
            android:gravity="center"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"></LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:background="#3d424d">

        <Button
            android:id="@+id/postiveBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="수락"
            android:background="#2C3039"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/negativeBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="거절"
            android:background="#2C3039"
            android:textColor="#fff"/>
    </LinearLayout>

</LinearLayout>