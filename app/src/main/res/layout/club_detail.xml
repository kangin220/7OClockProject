<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="30">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FF191C23"
        android:text="동호회 정보"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_weight="3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="24"
        android:weightSum="30">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="동호회 명"
            android:textColor="#2C3039"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/clubNameText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:layout_weight="3"
            android:textColor="#2C3039"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="동호회장"
            android:textColor="#2C3039"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/clubLeaderText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:textColor="#2C3039"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="동호회 위치"
            android:textColor="#2C3039"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/clubLocText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:textColor="#2C3039"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="동호회 소개"
            android:textColor="#2C3039"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/clubIntroText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            android:layout_weight="9"
            android:textColor="#2C3039"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/clubMemberNum"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textColor="#2C3039"/>

        <ListView
            android:id="@+id/clubMemberListView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="6"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:background="#2C3039"
        android:weightSum="2">
        <Button
            android:id="@+id/clubChatBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="동호회 채팅"
            android:background="#2C3039"
            android:textColor="#fff"/>

        <Button
            android:id="@+id/clubReqBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2C3039"
            android:textColor="#fff"/>

    </LinearLayout>

</LinearLayout>